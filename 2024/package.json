{
  "devDependencies": {
    "@marp-team/marp-cli": "^3.4.0"
  },
  "scripts": {
    "marp:serve": "PORT=8080 marp -s . --engine ./engine.js --html --allow-local-files",
    "marp:export": "marp --theme-set ./themes --engine ./engine.js --html --allow-local-files slides.md -o slides.html",
    "create-monolith": "monolith slides.html -o full-slides.html"
  }
}
